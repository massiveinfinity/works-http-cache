<?xml version="1.0" encoding="utf-8"?>

<manifest
    package="com.mobilesolutionworks.android.httpcache.test"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="Http Cache Test"
        android:theme="@style/ThemeCompat">

        <activity
            android:name=".MainActivity"
            android:label="Http Cache Test">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobilesolutionworks.android.httptag.test.MainActivity"
            android:label="Http Tag Test">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".content.WorksHttpCacheServiceImpl"
            android:exported="false">
            <intent-filter>
                <action android:name="com.mobilesolutionworks.httpcache.action.GET_DATA" />
                <data
                    android:host="com.mobilesolutionworks.httpcache"
                    android:scheme="content" />
            </intent-filter>
        </service>
        <service
            android:name="com.mobilesolutionworks.android.httptag.WorksHttpTagService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.mobilesolutionworks.httpcache.action.GET_TAG" />
            </intent-filter>
        </service>

        <provider
            android:name="com.mobilesolutionworks.android.httpcache.WorksHttpCacheContentProvider"
            android:authorities="com.mobilesolutionworks.httpcache"
            android:exported="false" />
        <provider
            android:name="com.mobilesolutionworks.android.httptag.WorksHttpTagProvider"
            android:authorities="com.mobilesolutionworks.httptag"
            android:exported="false" />

        <meta-data
            android:name="getDataIntent"
            android:value="com.mobilesolutionworks.httpcache.action.GET_DATA" />
        <meta-data
            android:name="getTagIntent"
            android:value="com.mobilesolutionworks.httpcache.action.GET_TAG" />
        <meta-data
            android:name="tagAuthority"
            android:value="com.mobilesolutionworks.httptag" />
    </application>
</manifest>
